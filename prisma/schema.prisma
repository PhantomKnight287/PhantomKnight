generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("mongodbUrl")
}

model automods {
  id      String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  v       Int      @default(0) @map("__v")
  enabled Boolean
  guildId String   @unique
  words   String[]
}

model emojis {
  id         String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  v          Int    @default(0) @map("__v")
  customName String
  emoji      String @unique
  guildId    String @unique
}

model playlists {
  id       String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  v        Int    @default(0) @map("__v")
  playList Json[]
  userId   String @unique
}

model welcomers {
  id              String  @id @default(dbgenerated()) @map("_id") @db.ObjectId
  v               Int     @default(0) @map("__v")
  channelId       String
  guildId         String  @unique
  welcomerMessage String
  enabled         Boolean
}

model leveling {
  id        String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  exp       Int
  level     Int
  nextLevel Int
  levelUpXp Int
  userId    String @unique
  v         Int    @default(0) @map("__v")

}

model logsConfig {
  channelId String
  id        String  @id @default(dbgenerated()) @map("_id") @db.ObjectId
  enabled   Boolean
  guildId   String  @unique
  v         Int     @default(0) @map("__v")

}

model warn {
  id       String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  v        Int    @default(0) @map("__v")
  guildId  String @unique
  warnings Json[]
}
